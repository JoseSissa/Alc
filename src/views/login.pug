doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Login
    link(rel="stylesheet", href="../css/styles.css")
    link(rel="stylesheet", href="../css/normalize.css")
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Roboto:wght@300;700&display=swap' rel='stylesheet')

  body.body
    header.header
      a.header__logo(href='#')
        img.logo(src='/resources/image/logo.jpg' alt='')
    main.main
      section.section__login
        .login
          .login__header
            h2.login__header--title Inicia sesión
          .login__body
            form(action="/login", method="post").form__login
              input#user.login__input(type='text' name='user' placeholder='Cédula' required)
              input#pass.login__input(type='password' name='pass' placeholder='Contraseña' required)
              input#submitLogin.button(type='submit' value='Ingresa')
            p Si aun no estas registrado: Contacta con un administrador

    script(src="//cdn.jsdelivr.net/npm/sweetalert2@11")
    script(type='text/javascript').
      let x = !{o};
      Swal.fire({
        title: x.title,
        text: x.text,
        icon: x.icon,
        showConfirmButton: x.scButton,
        timer: x.timer
      }).then(()=>{
        window.location= `/${x.ruta}`;
      });